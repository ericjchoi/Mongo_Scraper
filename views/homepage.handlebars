{{> header }}
<div class="container-fluid article-container">
    {{#if article}}
    {{#each article}}
    <div data-_id={{this._id}} class="card">
        <div class="card-header">
            <h3>
                <a class="article-link" target="_blank" rel="noopener noreferrer" href={{this.url}}>
                    {{this.headline}}</a>
                <a class="btn btn-success saveBtn">Save Article</a>
            </h3>
        </div>
        <div class="card-body">{{this.summary}}</div>
    </div>
    {{/each}}
</div>
{{else}}
<div class="alert alert-warning text-center">
    <h4>Uh Oh. Looks like we don't have any new articles.</h4>
</div>
<div class="card">
    <div class="card-header text-center">
        <h3>What Would You Like To Do?</h3>
    </div>
    <div class="card-body text-center">
        <h4>
            <a class="scrapeArticle">Try Scraping New Articles</a>
        </h4>
        <h4>
            <a href="/savedpage">Go to Saved Articles</a>
        </h4>
    </div>
</div>
{{/if}}
{{> footer }}
<script src="/assets/javascript/homepage_clickhandle.js"></script>